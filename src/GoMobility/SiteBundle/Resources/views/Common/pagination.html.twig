<div class="pagination">
    <ul>
        {% if pagination.page>1 %}
            <li class="last_page"><a href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}">Première page</a></li>
        {% endif %}
        
        {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.pages_count)) %}
            <li><a{% if p == pagination.page %} class="active"{% endif %} href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}">{{ p }}</a></li>
        {% endfor %}

        {% if pagination.page<pagination.pages_count %}
            <li class="last_page"><a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.pages_count})) }}">Dernière page</a></li>
        {% endif %}
    </ul>
</div>
